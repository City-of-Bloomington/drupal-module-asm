<section class="asm_animal">
    {% if animal.AREAFOUND %}<p>{{ animal.AREAFOUND }}</p>{% endif %}
    {% if animal.COMMENTS  %}<p>{{ animal.COMMENTS  }}</p>{% endif %}
    {% if animal.WEBSITEMEDIAID %}
        {% if proxy %}
            <img src="{{ path('asm.media', {'media_id': animal.WEBSITEMEDIAID}) }}" />
        {% else %}
            <img src="{{ asm_url }}/service?method=dbfs_image&amp;title={{ animal.WEBSITEMEDIAID }}.jpg" />
        {% endif %}
    {% endif %}
    <ul>{% if animal.SPECIESNAME   %}<li>{{ animal.SPECIESNAME   }}</li>{% endif %}
        {% if animal.BREEDNAME     %}<li>{{ animal.BREEDNAME     }}</li>{% endif %}
        {% if animal.SEXNAME       %}<li>{{ animal.SEXNAME       }}</li>{% endif %}
        {% if animal.AGEGROUP      %}<li>{{ animal.AGEGROUP      }}</li>{% endif %}
        {% if animal.BASECOLORNAME %}<li>{{ animal.BASECOLORNAME }}</li>{% endif %}
    </ul>
</section>
